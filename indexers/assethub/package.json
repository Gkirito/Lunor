{
  "name": "squid",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "db:migrate": "npx squid-typeorm-migration apply",
    "db:create-migration": "npx squid-typeorm-migration generate",
    "process": "node -r dotenv/config lib/main.js",
    "serve": "npx squid-graphql-server",
    "serve:prod": "npx squid-graphql-server --subscriptions --max-root-fields 10 --sql-statement-timeout 100000",
    "check-updates": "npx npm-check-updates --filter '/^@subsquid/.*$/'"
  },
  "dependencies": {
    "@subsquid/graphql-server": "^4.6.0",
    "@subsquid/ss58": "^2.0.2",
    "@subsquid/substrate-processor": "^8.4.1",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "dotenv": "^16.4.5",
    "pg": "8.12.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "^3.1.2",
    "@subsquid/substrate-typegen": "^8.1.0",
    "@subsquid/typeorm-codegen": "^2.0.1",
    "@types/node": "^20.14.8",
    "typescript": "^5.5.2"
  }
}
